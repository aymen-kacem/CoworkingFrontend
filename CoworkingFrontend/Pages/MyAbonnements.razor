@page "/my-abonnements"
@using CoworkingBlazor.Services
@using CoworkingFrontend.Models
@inject IAbonnementService AbonnementService
@inject IEspaceService EspaceService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="mb-0">My Subscriptions</h2>
            <div class="muted">Overview of your active and past subscriptions</div>
        </div>
        <div class="d-flex gap-2">
            <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
            <button class="btn btn-primary" @onclick="() => ShowCreateForm = !ShowCreateForm">New Subscription</button>
        </div>
    </div>

    @if (ShowCreateForm)
    {
        <div class="panel mb-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="mb-0">Create New Subscription</h5>
                <small class="muted">Select espace and duration</small>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Espace</label>
                    <select class="form-select" @bind="NewAbonnement.EspaceId">
                        <option value="0">-- Select Espace --</option>
                        @foreach (var espace in EspacesList)
                        {
                            <option value="@espace.Id">@espace.Nom (@espace.Type)</option>
                        }
                    </select>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Type</label>
                    <input type="text" class="form-control" @bind="NewAbonnement.Type" placeholder="e.g., Monthly, Annual" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Price</label>
                    <input type="number" step="0.01" class="form-control" @bind="NewAbonnement.Prix" placeholder="Price" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Start Date</label>
                    <input type="date" class="form-control" @bind="NewAbonnement.DateDebut" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">End Date</label>
                    <input type="date" class="form-control" @bind="NewAbonnement.DateFin" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@ErrorMessage</div>
            }

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-success" @onclick="CreateAbonnement" disabled="@IsLoading">
                    @if (IsLoading) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    Create Subscription
                </button>
                <button class="btn btn-outline-secondary" @onclick="() => ShowCreateForm = false">Cancel</button>
            </div>
        </div>
    }

    @if (IsLoadingAbonnements)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (AbonnementsList.Count == 0)
    {
        <div class="alert alert-info">No subscriptions found. Create one to get started!</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var abonnement in AbonnementsList)
            {
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-body d-flex align-items-start justify-content-between">
                            <div>
                                <h5 class="card-title">@abonnement.Type</h5>
                                <div class="muted">@abonnement.DateDebut.ToString("dd/MM/yyyy") - @abonnement.DateFin.ToString("dd/MM/yyyy")</div>
                                <div class="mt-2"><strong>Price:</strong> $@abonnement.Prix.ToString("F2")</div>
                            </div>
                            <div class="text-end">
                                <div class="badge-soft mb-2">@abonnement.Statut</div>
                                <div><button class="btn btn-sm btn-danger" @onclick="() => DeleteAbonnement(abonnement.Id)">Delete</button></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Abonnement> AbonnementsList = new();
    private List<Espace> EspacesList = new();
    private Abonnement NewAbonnement = new();
    private bool IsLoadingAbonnements = true;
    private bool IsLoading = false;
    private bool ShowCreateForm = false;
    private string ErrorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoadingAbonnements = true;
        AbonnementsList = await AbonnementService.GetMyAbonnementsAsync();
        EspacesList = await EspaceService.GetAllEspacesAsync();
        IsLoadingAbonnements = false;
    }

    private async Task CreateAbonnement()
    {
        if (string.IsNullOrWhiteSpace(NewAbonnement.Type) || NewAbonnement.Prix <= 0 || NewAbonnement.EspaceId == 0)
        {
            ErrorMessage = "Please fill in all required fields";
            return;
        }

        if (NewAbonnement.DateFin <= NewAbonnement.DateDebut)
        {
            ErrorMessage = "End date must be after start date";
            return;
        }

        IsLoading = true;
        NewAbonnement.Statut = Statut.EnAttente;
        var result = await AbonnementService.CreateAbonnementAsync(NewAbonnement);
        IsLoading = false;

        if (result != null)
        {
            NewAbonnement = new();
            ShowCreateForm = false;
            await LoadData();
        }
        else
        {
            ErrorMessage = "Failed to create subscription";
        }
    }

    private async Task DeleteAbonnement(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this subscription?"))
        {
            bool success = await AbonnementService.DeleteAbonnementAsync(id);
            if (success)
            {
                await LoadData();
            }
        }
    }

    [Inject]
    protected IJSRuntime JS { get; set; }
}