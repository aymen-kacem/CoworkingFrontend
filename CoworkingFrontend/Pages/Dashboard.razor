@page "/dashboard"
@using CoworkingBlazor.Services
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>Welcome, @Username!</h1>
            <p class="text-muted">Role: <span class="badge bg-info">@UserRole</span></p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-danger" @onclick="HandleLogout">Logout</button>
        </div>
    </div>

    <div class="row">
        @if (UserRole == "Etudiant")
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">📋 My Subscriptions</h5>
                        <p class="card-text">Manage your abonnements and plans</p>
                        <a href="/my-abonnements" class="btn btn-primary">View Abonnements</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">📅 My Reservations</h5>
                        <p class="card-text">View and manage your reservations</p>
                        <a href="/my-reservations" class="btn btn-primary">View Reservations</a>
                    </div>
                </div>
            </div>
        }
        @if (UserRole == "Admin")
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">🏢 Manage Espaces</h5>
                        <p class="card-text">Create, edit, and delete workspaces</p>
                        <a href="/admin/espaces" class="btn btn-primary">Manage Espaces</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">🛠️ Manage Resources</h5>
                        <p class="card-text">Manage space resources</p>
                        <a href="/admin/ressources" class="btn btn-primary">Manage Ressources</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">📅 All Reservations</h5>
                        <p class="card-text">View all system reservations</p>
                        <a href="/admin/reservations" class="btn btn-primary">View Reservations</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">📋 All Abonnements</h5>
                        <p class="card-text">View all system subscriptions</p>
                        <a href="/admin/abonnements" class="btn btn-primary">View Abonnements</a>
                    </div>
                </div>
            </div>
        }
        @if (UserRole == "Technicien")
        {
            <div class="col-md-6 mb-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">🔧 Maintenance Tasks</h5>
                        <p class="card-text">View and manage maintenance tasks</p>
                        <a href="/technicien/maintenance" class="btn btn-primary">View Tasks</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private string Username = string.Empty;
    private string UserRole = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }

        Username = await AuthService.GetUsernameAsync();
        UserRole = await AuthService.GetRoleAsync();
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}
