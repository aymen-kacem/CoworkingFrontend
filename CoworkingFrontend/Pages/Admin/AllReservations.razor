@page "/admin/reservations"
@using CoworkingBlazor.Services
@using CoworkingFrontend.Models
@inject IReservationService ReservationService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>All Reservations</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status"></div>
        </div>
    }
    else if (ReservationsList.Count == 0)
    {
        <div class="alert alert-info">No reservations found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>User ID</th>
                        <th>Espace ID</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reservation in ReservationsList)
                    {
                        <tr>
                            <td>@reservation.Id</td>
                            <td>@reservation.UtilisateurId</td>
                            <td>@reservation.EspaceId</td>
                            <td>@reservation.DateDebut.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@reservation.DateFin.ToString("dd/MM/yyyy HH:mm")</td>
                            <td><span class="badge bg-info">@reservation.Statut</span></td>
                            <td>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteReservation(reservation.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Reservation> ReservationsList = new();
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        await LoadReservations();
    }

    private async Task LoadReservations()
    {
        IsLoading = true;
        ReservationsList = await ReservationService.GetAllReservationsAsync();
        IsLoading = false;
    }

    private async Task DeleteReservation(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Delete this reservation?"))
        {
            bool success = await ReservationService.DeleteReservationAsync(id);
            if (success)
            {
                await LoadReservations();
            }
        }
    }

    [Inject]
    protected IJSRuntime JS { get; set; }
}