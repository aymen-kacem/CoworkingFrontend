@page "/admin/abonnements"
@using CoworkingBlazor.Services
@using CoworkingFrontend.Models
@inject IAbonnementService AbonnementService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>All Abonnements</h2>
        </div>
        <div class="col-md-4 text-end">
            <a href="/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
    </div>

    @if (IsLoading)
    {
        <div class="text-center">
            <div class="spinner-border" role="status"></div>
        </div>
    }
    else if (AbonnementsList.Count == 0)
    {
        <div class="alert alert-info">No abonnements found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>User ID</th>
                        <th>Espace ID</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var abonnement in AbonnementsList)
                    {
                        <tr>
                            <td>@abonnement.Id</td>
                            <td>@abonnement.Type</td>
                            <td>$@abonnement.Prix.ToString("F2")</td>
                            <td>@abonnement.DateDebut.ToString("dd/MM/yyyy")</td>
                            <td>@abonnement.DateFin.ToString("dd/MM/yyyy")</td>
                            <td>@abonnement.UtilisateurId</td>
                            <td>@abonnement.EspaceId</td>
                            <td><span class="badge bg-info">@abonnement.Statut</span></td>
                            <td>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteAbonnement(abonnement.Id)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Abonnement> AbonnementsList = new();
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        await LoadAbonnements();
    }

    private async Task LoadAbonnements()
    {
        IsLoading = true;
        AbonnementsList = await AbonnementService.GetAllAbonnementsAsync();
        IsLoading = false;
    }

    private async Task DeleteAbonnement(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Delete this abonnement?"))
        {
            bool success = await AbonnementService.DeleteAbonnementAsync(id);
            if (success)
            {
                await LoadAbonnements();
            }
        }
    }

    [Inject]
    protected IJSRuntime JS { get; set; }
}