@page "/admin/ressources"
@using CoworkingBlazor.Services
@using CoworkingFrontend.Models
@inject IRessourceService RessourceService
@inject IEspaceService EspaceService
@inject IAuthService AuthService
@inject NavigationManager NavigationManager

<div class="container-fluid mt-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="mb-0">Resources</h2>
            <div class="muted">Manage equipment and inventory for espaces</div>
        </div>
        <div class="d-flex gap-2">
            <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
            <button class="btn btn-primary" @onclick="() => ShowCreateForm = !ShowCreateForm">New Resource</button>
        </div>
    </div>

    @if (ShowCreateForm)
    {
        <div class="panel mb-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h5 class="mb-0">Create New Resource</h5>
                <small class="muted">Assign to an espace</small>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" @bind="NewRessource.Nom" placeholder="Resource name" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Type</label>
                    <input type="text" class="form-control" @bind="NewRessource.Type" placeholder="e.g., Chair, Desk, Projector" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Espace</label>
                    <select class="form-select" @bind="NewRessource.EspaceId">
                        <option value="0">-- Select Espace --</option>
                        @foreach (var espace in EspacesList)
                        {
                            <option value="@espace.Id">@espace.Nom</option>
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Quantity Available</label>
                    <input type="number" class="form-control" @bind="NewRessource.QuantiteDisponible" placeholder="Quantity" />
                </div>
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger mt-3">@ErrorMessage</div>
            }

            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-success" @onclick="CreateRessource" disabled="@IsLoading">
                    @if (IsLoading) { <span class="spinner-border spinner-border-sm me-2"></span> }
                    Create Resource
                </button>
                <button class="btn btn-outline-secondary" @onclick="() => ShowCreateForm = false">Cancel</button>
            </div>
        </div>
    }

    @if (IsLoading)
    {
        <div class="text-center p-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (RessourcesList.Count == 0)
    {
        <div class="alert alert-info">No resources found.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var ressource in RessourcesList)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-start justify-content-between">
                                <div>
                                    <h5 class="card-title mb-1">@ressource.Nom</h5>
                                    <div class="muted small">@ressource.Type • Espace @ressource.EspaceId</div>
                                </div>
                                <div class="text-end">
                                    <div class="badge-soft mb-2">Qty: @ressource.QuantiteDisponible</div>
                                </div>
                            </div>

                            <div class="mt-3 d-flex gap-2">
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteRessource(ressource.Id)">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Ressource> RessourcesList = new();
    private List<Espace> EspacesList = new();
    private Ressource NewRessource = new();
    private bool IsLoading = true;
    private bool ShowCreateForm = false;
    private string ErrorMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (!AuthService.IsAuthenticated)
        {
            NavigationManager.NavigateTo("/login");
            return;
        }
        await LoadData();
    }

    private async Task LoadData()
    {
        IsLoading = true;
        RessourcesList = await RessourceService.GetAllRessourcesAsync();
        EspacesList = await EspaceService.GetAllEspacesAsync();
        IsLoading = false;
    }

    private async Task CreateRessource()
    {
        if (string.IsNullOrWhiteSpace(NewRessource.Nom) || NewRessource.EspaceId == 0 || NewRessource.QuantiteDisponible < 0)
        {
            ErrorMessage = "Please fill in all required fields";
            return;
        }

        IsLoading = true;
        bool success = await RessourceService.CreateRessourceAsync(NewRessource);
        IsLoading = false;

        if (success)
        {
            NewRessource = new();
            ShowCreateForm = false;
            await LoadData();
        }
        else
        {
            ErrorMessage = "Failed to create resource";
        }
    }

    private async Task DeleteRessource(int id)
    {
        if (await JS.InvokeAsync<bool>("confirm", "Delete this resource?"))
        {
            bool success = await RessourceService.DeleteRessourceAsync(id);
            if (success)
            {
                await LoadData();
            }
        }
    }

    [Inject]
    protected IJSRuntime JS { get; set; }
}