@inherits LayoutComponentBase
@using CoworkingBlazor.Services
@inject NavigationManager NavigationManager
@inject IAuthService AuthService

<header>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(90deg, rgba(11,35,64,0.95) 0%, rgba(11,42,74,0.95) 100%); box-shadow: 0 6px 20px rgba(16,24,40,0.12);">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" href="/dashboard">
                <strong style="letter-spacing:0.4px">CoWorking</strong>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    @if (AuthService.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/dashboard">Dashboard</NavLink>
                        </li>

                        @if (UserRole == "Etudiant")
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/my-abonnements">My Subscriptions</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/my-reservations">My Reservations</NavLink>
                            </li>
                        }

                        @if (UserRole == "Admin")
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/admin/espaces">Manage Espaces</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/admin/ressources">Manage Resources</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/admin/abonnements">All Abonnements</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/admin/reservations">All Reservations</NavLink>
                            </li>
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/admin/maintenance">Manage Maintenance</NavLink>
                            </li>
                        }

                        @if (UserRole == "Technicien")
                        {
                            <li class="nav-item">
                                <NavLink class="nav-link" href="/technicien/maintenance">Maintenance</NavLink>
                            </li>
                        }
                    }
                </ul>

                <div class="d-flex align-items-center">
                    @if (AuthService.IsAuthenticated)
                    {
                        <div class="me-3 text-end d-none d-md-block">
                            <div style="font-weight:700;">@Username</div>
                            <div class="muted small">@UserRole</div>
                        </div>
                        <button class="btn btn-outline-light" @onclick="HandleLogout">Logout</button>
                    }
                    else
                    {
                        <a class="btn btn-outline-light me-2" href="/login">Login</a>
                        <a class="btn btn-primary" href="/register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<main style="padding-top:1.5rem;">
    <div class="container-fluid content">
        @Body
    </div>
</main>

@code {
    private string Username = "Guest";
    private string UserRole = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (AuthService.IsAuthenticated)
        {
            try
            {
                Username = await AuthService.GetUsernameAsync();
                UserRole = await AuthService.GetRoleAsync();
            }
            catch
            {
                // ignore
            }
        }
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}